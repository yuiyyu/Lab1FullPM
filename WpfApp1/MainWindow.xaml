<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button x:Name="btnGenerateRequest" Content="Виконати запит до API" 
                    Width="150" Height="30" Margin="5" Click="BtnGenerateRequest_Click"/>
            <Button x:Name="btnViewUsers" Content="Перегляд користувачiв" 
                    Width="150" Height="30" Margin="5" Click="BtnViewUsers_Click"/>
            <Button x:Name="btnClearOutput" Content="Очистити поле"
                    Width="120" Height="30" Margin="5" Click="BtnClearOutput_Click"/>
        </StackPanel>

        <Grid Grid.Row="1" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Border Grid.Row="0" BorderBrush="Gray" BorderThickness="1" CornerRadius="5">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <TextBlock x:Name="txtOutput" Margin="10" TextWrapping="Wrap"
                             FontFamily="Consolas" FontSize="12"/>
                </ScrollViewer>
            </Border>

            <StatusBar Grid.Row="1" Margin="0,5,0,0">
                <StatusBarItem>
                    <TextBlock x:Name="txtStatus" Text=""/>
                </StatusBarItem>
            </StatusBar>
        </Grid>

        <ProgressBar Grid.Row="2" x:Name="progressBar" Height="20" Margin="10" 
                     IsIndeterminate="False" Visibility="Collapsed"/>
    </Grid>
</Window>
